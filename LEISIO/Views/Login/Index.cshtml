
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LEISIO - Login </title>


    @Styles.Render("~/Content/vendor");
</head>
<body class="login">
    <script>

        var usuario = window.sessionStorage.getItem('user');

        if (usuario != null) {
            window.location.href = "../Home/";
        }
    </script>
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form>
                        <h1>Página de acesso</h1>
                        <div>
                            <input id="username" type="text" class="form-control" placeholder="Username" required="" />
                        </div>
                        <div>
                            <input id="password" type="password" class="form-control" placeholder="Password" required="" />
                        </div>
                        <div>
                            <a id="Button_Login" class="btn btn-default submit">Log in</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-paw"></i> LEISIO</h1>
                                <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/vendor");


</body>
</html>

