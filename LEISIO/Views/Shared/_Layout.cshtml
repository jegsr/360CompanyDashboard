<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>LEISIO - @ViewBag.title</title>

    @Styles.Render("~/Content/vendor")
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class=" menu_fixed col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index","Home")" class="site_title"><i class="fa fa-paw"></i> <span>LEISIO</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="@Url.Content("~/build/images/img.jpg")" alt="...user..." class="img-circle profile_img">
                        </div>
                        
                        <div class="profile_info nome">
                            <span>Bem vindo,</span>
                            <h2>Nome de User</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li class="@(ViewBag.PageName == "Home" ? "active":"")">
                                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home "></i> Geral <span class="fa fa-circle-o"></span></a>
                                </li>
                                <li class="@(ViewBag.PageName == "Financas" ? "active":"")">
                                    <a href="@Url.Action("Index", "Financas")"><i class="fa fa-line-chart"></i> Financeiro <span class="fa fa-circle-o"></span></a>
                                </li>
                                <li class="@(ViewBag.PageName == "Vendas" ? "active":"")">
                                    <a href="@Url.Action("Index", "Vendas")"><i class="fa fa-desktop"></i> Vendas <span class="fa fa-circle-o"></span></a>
                                </li>
                                <li class="@(ViewBag.PageName == "Compras" ? "active":"")">
                                    <a href="@Url.Action("Index", "Compras")"><i class="fa fa-table"></i> Compras <span class="fa fa-circle-o"></span></a>
                                </li>
                                <li class="@(ViewBag.PageName == "Stock" ? "active":"")">
                                    <a href="@Url.Action("Index", "Stock")"><i class="fa fa-edit"></i> Stock <span class="fa fa-circle-o"></span></a>
                                </li>
                            </ul>
                        </div>


                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav ">
                <div class="nav_menu ">
                    <nav>

                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>


                        <ul class="nav navbar-nav navbar-right">
                            <li style="overflow: auto;margin-top: 13px; margin-left: 10%" class="pull-left">
                                <div id="reportrange_right" class="pull-left" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                                    <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                                    <span></span> <b class="caret"></b>
                                </div>
                            </li>
                            <!--
                            <li style="overflow: auto;margin-top: 13px; margin-left: 10%" class="pull-left">
                                <div style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                                    <a href="@Url.Action("DownloadViewPDF", @ViewBag.PageName)">Exportar</a>
                                </div>
                            </li>
                            -->
                            <li class="">
                                <a id="nome" href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content("~/build/images/img.jpg")" alt="...user...">Nome de User
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li id="logout"><a href="@Url.Action("Index","Login")"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>


                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            @RenderBody()
            <!-- /page content -->
        </div>

        @Scripts.Render("~/bundles/vendor")
    </div>
</body>
</html>
